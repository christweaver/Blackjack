    let playerFinalCards=0
   let playerScore= playerFinal(playersHand)
   console.log(`player currently has ${playerScore}`)


  //  PLAYER OPTIONS
   function playerOptions() {
     if (playerstotal===21) {return console.log("You have blackjack!")}
